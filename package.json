{
  "name": "padel-booking",
  "private": true,
  "workspaces": [
    "frontend",
    "server",
    "client"
  ],
  "scripts": {
    "frontend": "bun --cwd frontend",
    "client": "bun --cwd client",
    "server": "bun --cwd server",
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:client\" \"bun run dev:server\"",
    "dev:frontend": "bun --cwd frontend dev",
    "dev:client": "bun --cwd client dev",
    "dev:server": "bun --cwd server dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
